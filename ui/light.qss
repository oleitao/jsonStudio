QWidget { background: #f5f5f5; color: #222; }
QLineEdit, QPlainTextEdit, QTreeView { background: #ffffff; color: #222; selection-background-color: #cce4ff; }
QHeaderView::section { background: #eeeeee; color: #333; border: 1px solid #ccc; }
QPushButton { background: #fafafa; border: 1px solid #ccc; padding: 4px 8px; }
QPushButton:hover { background: #f0f0f0; }
QPushButton:pressed { background: #eaeaea; }
QMenuBar { background: #f5f5f5; color: #222; }
QMenu { background: #ffffff; color: #222; }
QMenu::item:selected { background: #cce4ff; }
