QWidget { background: #2b2b2b; color: #ddd; }
QLineEdit, QPlainTextEdit, QTreeView { background: #3c3f41; color: #e6e6e6; selection-background-color: #4b6eaf; }
QHeaderView::section { background: #3c3f41; color: #ddd; border: 1px solid #555; }
QPushButton { background: #444; border: 1px solid #666; padding: 4px 8px; }
QPushButton:hover { background: #555; }
QPushButton:pressed { background: #333; }
QMenuBar { background: #2b2b2b; color: #ddd; }
QMenu { background: #2b2b2b; color: #ddd; }
QMenu::item:selected { background: #4b6eaf; }
